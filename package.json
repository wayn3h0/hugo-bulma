{
  "name": "Hugo-Bulma",
  "version": "0.1.0",
  "description": "Hugo theme based on Bulma",
  "author": "Wayne Ho",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wayn3h0/hugo-bulma.git"
  },
  "homepage": "https://github.com/wayn3h0/hugo-bulma#readme",
  "bugs": {
    "url": "https://github.com/wayn3h0/hugo-bulma/issues"
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "bulma": "^0.9.0",
    "postcss-cli": "^7.1.1",
    "autoprefixer": "^9.8.0",
    "@babel/core": "^7.9.6",
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.6"
  },
  "scripts": {
    "clear": "rimraf exampleSite/public & rimraf exampleSite/resources",
    "build": "hugo --gc --source exampleSite --themesDir ../../",
    "rebuild": "npm run clear & npm run build",
    "serve": "hugo server --gc --source exampleSite --themesDir ../../"
  }
}
